<view class="container">

  <view class="item">
    <input class="item-input" placeholder="输入数字, 例如 1024" maxlength="12" bindinput="getContent" />
  </view>

  <view class="item">
    <button class="button" type="primary" bindtap="convert">转换</button>
  </view>

  <view class="result-container">
    <textarea class="result-input" maxlength="140000" placeholder="这里展示结果" value="{{resultContent}}" />
  </view>
</view>